<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#c0c0c0"
        android:padding="1dp"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/iv_buy_item"
                android:layout_width="150dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

        <RelativeLayout
                android:id="@+id/layout_isInStock"
                android:layout_width="150dp"
                android:layout_alignParentStart="true"
                android:background="#60ffffff"
                android:layout_alignParentTop="true"
                android:layout_height="150dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:text="OUT OF STOCK"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_toEndOf="@+id/iv_buy_item"
                android:layout_width="match_parent"
                android:layout_margin="5dip"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_buy_item_Name"
                    android:layout_width="match_parent"
                    android:lines="1"
                    android:maxLines="2"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="@string/app_name"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_buy_item_discreption"
                    android:layout_width="wrap_content"
                    android:lines="1"
                    android:maxLines="2"
                    android:maxEms="10"
                    android:ems="10"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="@string/app_name"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_buy_item_units"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="Combo - 2 Item"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_buy_item_dprice"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="Rs. 700"
                        android:singleLine="true"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_buy_item_sprice"
                        android:layout_marginStart="15dp"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:text="Rs. 500"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_iDecrement"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="30dp"
                        android:background="@drawable/rectangle"
                        android:layout_height="wrap_content"
                        android:text="-">
                </TextView>

                <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:gravity="center_horizontal"
                        android:id="@+id/tv_nQuntity"
                        android:text="1">

                </TextView>
                <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:gravity="center_horizontal"
                        android:id="@+id/tv_iIncrement"
                        android:text="+">

                </TextView>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>